datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}


model Floor {
  id     String  @id @default(uuid())
  number Int     @unique
  blocks Block[]
}

model Block {
  id      String  @id @default(uuid())
  number  Int
  floorId String
  floor   Floor   @relation(fields: [floorId], references: [id])
  rooms   Room[]
  toilets Toilet[]
}

model Room {
  id       String @id @default(uuid())
  number   String @unique
  blockId  String
  block    Block  @relation(fields: [blockId], references: [id])
}

model Toilet {
  id      String @id @default(uuid())
  blockId String
  block   Block  @relation(fields: [blockId], references: [id])
}

model LocationOfTheProblem {
  id            String          @id @default(uuid())
  name          String
  reportProblem ReportProblem[]
}

model ReportProblem {
  id            String @id @default(uuid())
  userId        String
  userName      String
  problemTittle String @db.Text
  description   String @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  reportImage   ReportImage[]
  locationOfTheProblem LocationOfTheProblem @relation(fields: [locationProblemId], references: [id])
  locationProblemId    String
  floorId              String?
  blockId              String?
  roomId               String?
  toiletId             String?

  @@index([locationProblemId])
  @@fulltext([problemTittle])
}

model ReportImage {
  id              String  @id @default(uuid())
  reportProblemId String
  url             String
  reportProblem   ReportProblem @relation(fields: [reportProblemId], references: [id], onDelete: Cascade)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([reportProblemId])
}
